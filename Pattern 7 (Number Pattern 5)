package structure;
import java.util.*;
public class Pattern2 {
 //number pattern
	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);
		int row=sc.nextInt();
	    int i=1;int count=1;
		while(i<=row) {
			int j=1;
			while(j<=i)
			{ 
				System.out.print(count+" ");
				count =count+1;
				j++;
			}
			System.out.println();
			i++;
		}
	}

}
